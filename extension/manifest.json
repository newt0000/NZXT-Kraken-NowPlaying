{
  "manifest_version": 3,
  "name": "Kraken YouTube Now Playing Bridge",
  "version": "1.0.0",
  "description": "Sends current YouTube playback info to localhost for NZXT Kraken web integration.",
  "permissions": ["tabs"],
  "host_permissions": ["http://127.0.0.1:27123/*", "http://localhost:27123/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
